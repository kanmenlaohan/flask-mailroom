{% extends 'base.jinja2' %}

{% block subtitle %}Make a donation!{% endblock subtitle %}

{% block content %}
<form method="POST">
    <label for="name-input">Donor Name:</label><input id="name-input" type="text" name="name"><br>
    <label for="donation-amount">Amount:</label><input id="donation-amount" type="int" name="amount"><br>
    <input type="submit" value="donate">
</form>
{% endblock content %}